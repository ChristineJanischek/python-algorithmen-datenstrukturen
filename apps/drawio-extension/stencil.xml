<?xml version="1.0" encoding="UTF-8"?>
<!--
  Struktogramm Stencils für Draw.io
  Baden-Württemberg Standard
  
  Diese Stencil-Definition enthält:
  - 4 BW-Standard Formen (Anweisung, Alternative, While, For)
  - 7 Instruction Types (mit diferenzierten Icons)
  - Vollständig parametrisierbar für Draw.io/mxGraph
  
  Version: 0.1.0
  Created: 18.02.2026
  Author: Christine Janischek
  License: MIT
-->

<shapes name="Struktogramme (BW Standard)">
  
  <!-- ============================================
       CATEGORY 1: KONTROLLSTRUKTUREN (4 Formen)
       ============================================ -->
  
  <!-- FORM 1: ANWEISUNG (Rechteck) -->
  <shape name="Anweisung" description="Einfache Anweisung oder Zuweisung">
    <description>
      Rechteck für Anweisungen, Zuweisungen und Verarbeitungsschritte.
      Beispiel: variable = wert
    </description>
    <connections>
      <constraint name="perimeter" type="perimeter"/>
    </connections>
    <background w="120" h="60">
      <path data="M 0 0 L 120 0 L 120 60 L 0 60 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
    </background>
    <foreground w="120" h="60">
      <text x="60" y="30" halign="center" valign="middle" fontsize="12">
        <mxCell style="text;html=1;align=center;verticalAlign=middle;whiteSpace=wrap;rounded=0;"/>
      </text>
    </foreground>
  </shape>

  <!-- FORM 2: ALTERNATIVE (Raute + Rechteck) -->
  <shape name="Alternative" description="Verzweigung: wenn-dann-sonst">
    <description>
      Alternative/Verzweigung mit Bedingung (Raute) und zwei Äste.
      Beispiel: wenn bedingung, dann ... , sonst ...
    </description>
    <connections>
      <constraint name="perimeter" type="perimeter"/>
    </connections>
    <background w="120" h="80">
      <!-- Raute (Bedingung) -->
      <path data="M 60 0 L 120 40 L 60 80 L 0 40 Z" stroke="#000000" strokewidth="2" fill="#ffffcc"/>
    </background>
    <foreground w="120" h="80">
      <text x="60" y="40" halign="center" valign="middle" fontsize="11">
        <mxCell style="text;html=1;align=center;verticalAlign=middle;whiteSpace=wrap;rounded=0;"/>
      </text>
      <!-- Labels für J/N -->
      <text x="90" y="50" halign="center" valign="middle" fontsize="10">J</text>
      <text x="30" y="50" halign="center" valign="middle" fontsize="10">N</text>
    </foreground>
  </shape>

  <!-- FORM 3: WHILE-SCHLEIFE (Umgedrehtes L) -->
  <shape name="While" description="While-Schleife: Wiederhole solange">
    <description>
      While-Schleife mit Bedingung oben.
      Beispiel: Wiederhole solange i &lt; 10
    </description>
    <connections>
      <constraint name="perimeter" type="perimeter"/>
    </connections>
    <background w="120" h="100">
      <!-- Kopf -->
      <path data="M 0 0 L 120 0 L 120 40 L 0 40 Z" stroke="#000000" strokewidth="2" fill="#ffffcc"/>
      <!-- Körper -->
      <path data="M 20 40 L 100 40 L 100 100 L 20 100 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
      <!-- Verbindung -->
      <path data="M 20 40 L 20 100" stroke="#000000" strokewidth="1"/>
    </background>
    <foreground w="120" h="100">
      <text x="60" y="20" halign="center" valign="middle" fontsize="11">
        <mxCell style="text;html=1;align=center;verticalAlign=middle;whiteSpace=wrap;rounded=0;"/>
      </text>
    </foreground>
  </shape>

  <!-- FORM 4: FOR-SCHLEIFE (Variant von While) -->
  <shape name="For" description="For-Schleife: Zähle von...bis">
    <description>
      For-Schleife/Zählschleife mit Zähler.
      Beispiel: Zähle i von 1 bis 10
    </description>
    <connections>
      <constraint name="perimeter" type="perimeter"/>
    </connections>
    <background w="140" h="100">
      <!-- Kopf -->
      <path data="M 0 0 L 140 0 L 140 50 L 0 50 Z" stroke="#000000" strokewidth="2" fill="#ccffcc"/>
      <!-- Körper -->
      <path data="M 20 50 L 120 50 L 120 100 L 20 100 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
      <!-- Verbindung -->
      <path data="M 20 50 L 20 100" stroke="#000000" strokewidth="1"/>
    </background>
    <foreground w="140" h="100">
      <text x="70" y="25" halign="center" valign="middle" fontsize="10">
        <mxCell style="text;html=1;align=center;verticalAlign=middle;whiteSpace=wrap;rounded=0;"/>
      </text>
    </foreground>
  </shape>

  <!-- ============================================
       CATEGORY 2: INSTRUCTION TYPES (7 Typen)
       ============================================ -->

  <!-- TYPE 1: DEKLARATION -->
  <shape name="Deklaration" description="Variablendeklaration" inherits="Anweisung">
    <description>
      Variable |als datentyp|
      Mit Deklarations-Icon (var-Symbol)
    </description>
    <background w="120" h="60">
      <path data="M 0 0 L 120 0 L 120 60 L 0 60 Z" stroke="#000000" strokewidth="2" fill="#e8f4f8"/>
    </background>
  </shape>

  <!-- TYPE 2: DEKLARATION & INITIALISIERUNG -->
  <shape name="Initialisierung" description="Deklaration mit Zuweisung" inherits="Anweisung">
    <description>
      variable |als datentyp| = wert
      Kombiniert Deklaration und Zuweisung
    </description>
    <background w="120" h="60">
      <path data="M 0 0 L 120 0 L 120 60 L 0 60 Z" stroke="#000000" strokewidth="2" fill="#dceefb"/>
    </background>
  </shape>

  <!-- TYPE 3: EINLESEN -->
  <shape name="Einlesen" description="Eingabe von Benutzerdaten" inherits="Anweisung">
    <description>
      variable |als datentyp|
      Mit Input-Symbol (⇒ nach innen)
    </description>
    <background w="120" h="60">
      <path data="M 10 0 L 120 0 L 110 60 L 0 60 Z" stroke="#000000" strokewidth="2" fill="#d4edda"/>
    </background>
  </shape>

  <!-- TYPE 4: ZUWEISUNG -->
  <shape name="Zuweisung" description="Wertzuweisung" inherits="Anweisung">
    <description>
      variable = wert
      Standard-Anweisungs-Shape mit ← Symbol
    </description>
    <background w="120" h="60">
      <path data="M 0 0 L 120 0 L 120 60 L 0 60 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
    </background>
  </shape>

  <!-- TYPE 5: AUSGABE -->
  <shape name="Ausgabe" description="Ausgabe von Werten" inherits="Anweisung">
    <description>
      inhalt
      Mit Output-Symbol (⇒ nach außen)
    </description>
    <background w="120" h="60">
      <path data="M 0 0 L 110 0 L 120 60 L 10 60 Z" stroke="#000000" strokewidth="2" fill="#fff3cd"/>
    </background>
  </shape>

  <!-- TYPE 6: RÜCKGABE -->
  <shape name="Rückgabe" description="Return-Statement" inherits="Anweisung">
    <description>
      Rückgabe: wert
      Mit return-Symbol (↩)
    </description>
    <background w="120" h="60">
      <path data="M 0 0 L 120 0 L 120 60 L 0 60 Z" stroke="#000000" strokewidth="2" fill="#f5d4d4"/>
    </background>
  </shape>

  <!-- TYPE 7: FUNKTIONSAUFRUF -->
  <shape name="FunktionsAufruf" description="Aufruf einer Funktion" inherits="Anweisung">
    <description>
      funktionsname(parameter)
      Mit call-Symbol (⊕)
    </description>
    <background w="120" h="60">
      <path data="M 5 0 L 115 0 L 120 30 L 115 60 L 5 60 L 0 30 Z" stroke="#000000" strokewidth="2" fill="#e8d5e8"/>
    </background>
  </shape>

  <!-- ============================================
       CATEGORY 3: HELPER SHAPES
       ============================================ -->

  <!-- Start/End Marker -->
  <shape name="Start" description="Programm-Start">
    <description>Oval für Start/Ende</description>
    <background w="80" h="40">
      <ellipse cx="40" cy="20" rx="40" ry="20" stroke="#000000" strokewidth="2" fill="#ccffcc"/>
    </background>
  </shape>

  <shape name="Ende" description="Programm-Ende">
    <description>Oval für Start/Ende</description>
    <background w="80" h="40">
      <ellipse cx="40" cy="20" rx="40" ry="20" stroke="#000000" strokewidth="2" fill="#ffcccc"/>
    </background>
  </shape>

  <!-- Verbindungen/Pfeile werden durch Draw.io automatisch erstellt -->

</shapes>
