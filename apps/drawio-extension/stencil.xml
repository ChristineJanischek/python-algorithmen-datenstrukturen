<?xml version="1.0" encoding="UTF-8"?>
<!--
  Struktogramm Stencils für Draw.io
  Baden-Württemberg Standard (Operatorenliste v2.2)
-->

<shapes name="Struktogramme (BW Operatoren v2.2)">

  <!-- BASIS: Anweisungskasten -->
  <shape name="BW_Anweisung" description="Standard-Anweisung nach BW-Notation">
    <connections>
      <constraint name="perimeter" x="0.5" y="0" perimeter="1"/>
      <constraint name="perimeter" x="0.5" y="1" perimeter="1"/>
      <constraint name="perimeter" x="0" y="0.5" perimeter="1"/>
      <constraint name="perimeter" x="1" y="0.5" perimeter="1"/>
    </connections>
    <background w="260" h="70">
      <path data="M 0 0 L 260 0 L 260 70 L 0 70 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
    </background>
    <foreground w="260" h="70">
      <text x="130" y="35" halign="center" valign="middle" fontsize="12">Operator: inhalt</text>
    </foreground>
  </shape>

  <!-- Aufruf: Rechteck mit vertikalen Innenstrichen -->
  <shape name="BW_Aufruf" description="Aufruf-Kasten mit Seitenstrichen">
    <background w="260" h="70">
      <path data="M 0 0 L 260 0 L 260 70 L 0 70 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
      <path data="M 10 0 L 10 70" stroke="#000000" strokewidth="2"/>
      <path data="M 250 0 L 250 70" stroke="#000000" strokewidth="2"/>
    </background>
    <foreground w="260" h="70">
      <text x="130" y="35" halign="center" valign="middle" fontsize="12">Aufruf: methode(parameter)</text>
    </foreground>
  </shape>

  <!-- Alternative: Rechteck mit eingebettetem Dreieck + J/N -->
  <shape name="BW_Alternative" description="Wenn-dann-sonst nach BW-Standard">
    <background w="320" h="200">
      <path data="M 0 0 L 320 0 L 320 200 L 0 200 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
      <path data="M 0 0 L 320 0 L 160 60 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
      <path data="M 160 60 L 160 200" stroke="#000000" strokewidth="2"/>
    </background>
    <foreground w="320" h="200">
      <text x="160" y="28" halign="center" valign="middle" fontsize="12">Bedingung</text>
      <text x="18" y="84" halign="center" valign="middle" fontsize="12">J</text>
      <text x="178" y="84" halign="center" valign="middle" fontsize="12">N</text>
      <text x="80" y="132" halign="center" valign="middle" fontsize="11">Ja-Zweig</text>
      <text x="240" y="132" halign="center" valign="middle" fontsize="11">Nein-Zweig</text>
    </foreground>
  </shape>

  <!-- While: umgedrehtes L -->
  <shape name="BW_While" description="Wiederhole solange ... (umgedrehtes L)">
    <background w="320" h="180">
      <path data="M 0 0 L 320 0 L 320 45 L 0 45 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
      <path data="M 0 45 L 0 180" stroke="#000000" strokewidth="2"/>
      <path data="M 0 180 L 320 180" stroke="#000000" strokewidth="2"/>
      <path data="M 18 45 L 320 45 L 320 180 L 18 180 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
    </background>
    <foreground w="320" h="180">
      <text x="160" y="22" halign="center" valign="middle" fontsize="12">Wiederhole solange bedingung</text>
      <text x="169" y="112" halign="center" valign="middle" fontsize="11">Schleifenkörper</text>
    </foreground>
  </shape>

  <!-- For: gleiche Form wie While -->
  <shape name="BW_For" description="Zähle ... / Wiederhole von ... (umgedrehtes L)">
    <background w="320" h="180">
      <path data="M 0 0 L 320 0 L 320 45 L 0 45 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
      <path data="M 0 45 L 0 180" stroke="#000000" strokewidth="2"/>
      <path data="M 0 180 L 320 180" stroke="#000000" strokewidth="2"/>
      <path data="M 18 45 L 320 45 L 320 180 L 18 180 Z" stroke="#000000" strokewidth="2" fill="#ffffff"/>
    </background>
    <foreground w="320" h="180">
      <text x="160" y="22" halign="center" valign="middle" fontsize="12">Zähle i von start bis ende, Schrittweite 1</text>
      <text x="169" y="112" halign="center" valign="middle" fontsize="11">Schleifenkörper</text>
    </foreground>
  </shape>

  <!-- Operator-Templates als Anweisungsvarianten -->
  <shape name="Deklaration" description="Deklaration: variable |als datentyp|" inherits="BW_Anweisung"/>
  <shape name="Initialisierung" description="Initialisierung: variable = wert" inherits="BW_Anweisung"/>
  <shape name="Deklaration_und_Initialisierung" description="Deklaration und Initialisierung: variable |als datentyp| = wert" inherits="BW_Anweisung"/>
  <shape name="Zuweisung" description="Zuweisung: element = wert" inherits="BW_Anweisung"/>
  <shape name="Einlesen" description="Einlesen: variable |als datentyp|" inherits="BW_Anweisung"/>
  <shape name="Deklaration_und_Einlesen" description="Deklaration und Einlesen: variable |als datentyp|" inherits="BW_Anweisung"/>
  <shape name="Ausgabe" description="Ausgabe: inhalt" inherits="BW_Anweisung"/>
  <shape name="Rueckgabe" description="Rückgabe: wert" inherits="BW_Anweisung"/>
  <shape name="Array_Deklaration_Initialisierung" description="Deklaration und Initialisierung: array |als Array| = [werte]" inherits="BW_Anweisung"/>
  <shape name="Array_Element_Zuweisung" description="Zuweisung: array[index] = wert" inherits="BW_Anweisung"/>
  <shape name="Array_Anzahl_Elemente" description="Anzahl der Elemente des Arrays array" inherits="BW_Anweisung"/>
  <shape name="Array_Element_Ausgabe" description="Ausgabe: array[index]" inherits="BW_Anweisung"/>

</shapes>
