#!/bin/bash
#
# Git Pre-Push Hook: Markdown-Dateien Review
# 
# Dieser Hook wird vor jedem Push ausgefÃ¼hrt und fragt den Nutzer, 
# ob die Markdown-Dateien auf Konsistenz und AktualitÃ¤t Ã¼berprÃ¼ft werden sollen.
#
# Installation:
#   cp .githooks/pre-push .git/hooks/pre-push
#   chmod +x .git/hooks/pre-push
#

# Farben fÃ¼r Terminal-Output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Hole das Root-Verzeichnis des Repositories
REPO_ROOT="$(git rev-parse --show-toplevel)"
TOOLS_DIR="$REPO_ROOT/apps/tools"
REVIEWER_SCRIPT="$TOOLS_DIR/markdown_reviewer.py"

# ÃœberprÃ¼fe ob Python und das Script vorhanden sind
if [ ! -f "$REVIEWER_SCRIPT" ]; then
    echo -e "${YELLOW}âš ï¸  Markdown Reviewer Script nicht gefunden. Ãœberspringe Review.${NC}"
    exit 0
fi

# Frage den Nutzer
echo -e "\n${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${BLUE}ğŸ“‹ GIT PRE-PUSH HOOK - Markdown Review${NC}"
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo ""
echo -e "MÃ¶chtest Du die ${YELLOW}Markdown-Dateien${NC} Ã¼berprÃ¼fen lassen?"
echo "  âœ“ UngÃ¼ltige Datei-Referenzen"
echo "  âœ“ Tote Links / Verwaiste Dateien"
echo "  âœ“ Struktur-Konsistenz (fehlende INDEX-EintrÃ¤ge)"
echo "  âœ“ Dokumentations-Synchronisation"
echo "  âœ“ PrÃ¼fungs-Dateinamensschema (Klausur_Thema_Typ_VersionX.md)"
echo ""

# Interaktive Abfrage
read -p "Review durchfÃ¼hren? (ja/Ja/j/J oder Enter zum Ãœberspringen): " -n 1 RESPONSE
echo ""

# ÃœberprÃ¼fe Antwort (case-insensitive)
if [[ $RESPONSE =~ ^[jJ]$ ]]; then
    echo ""
    echo -e "${BLUE}â–¶ Starten des Markdown-Dateien Reviews...${NC}"
    echo ""
    
    # FÃ¼hre Python-Script aus
    python3 "$REVIEWER_SCRIPT"
    REVIEW_EXIT_CODE=$?
    
    echo ""
    
    # ÃœberprÃ¼fe Ergebnis
    if [ $REVIEW_EXIT_CODE -eq 0 ]; then
        echo -e "${GREEN}âœ… Review erfolgreich - keine kritischen Fehler${NC}"
        echo -e "${YELLOW}(Warnungen sollten trotzdem Ã¼berprÃ¼ft werden)${NC}"
        echo ""
        read -p "Mit Push fortfahren? (Enter=Ja / n=Nein): " -n 1 CONTINUE
        echo ""
        
        if [[ ! $CONTINUE =~ ^[nN]$ ]]; then
            echo -e "${GREEN}â–¶ Push wird fortgesetzt...${NC}\n"
            exit 0
        else
            echo -e "${YELLOW}âŠ˜ Push wurde abgebrochen${NC}\n"
            exit 1
        fi
    elif [ $REVIEW_EXIT_CODE -eq 1 ]; then
        echo -e "${RED}âŒ Markdown-Fehler gefunden!${NC}"
        echo ""
        read -p "Trotzdem pushen? (Enter=Nein / y=Ja): " -n 1 FORCE_PUSH
        echo ""
        
        if [[ $FORCE_PUSH =~ ^[yY]$ ]]; then
            echo -e "${YELLOW}âš ï¸  Push trotz Fehlern...${NC}\n"
            exit 0
        else
            echo -e "${YELLOW}âŠ˜ Push wurde abgebrochen${NC}\n"
            exit 1
        fi
    else
        echo -e "${RED}âŒ Fehler beim Review-Script${NC}\n"
        exit 0
    fi
else
    echo -e "${YELLOW}âŠ˜ Review Ã¼bersprungen - Push wird fortgesetzt${NC}\n"
    exit 0
fi
