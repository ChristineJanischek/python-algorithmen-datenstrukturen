  </metadata>
  <inhalt>
    <prozess typ="zuweisung">summe = 0</prozess>
    <prozess typ="zuweisung">i = 0</prozess>
    <wiederhole>
      <bedingung>i &lt; l√§nge(array)</bedingung>
      <inhalt>
