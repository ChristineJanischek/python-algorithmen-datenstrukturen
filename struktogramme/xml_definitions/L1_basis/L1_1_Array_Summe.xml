    <autor>System</autor>
    <beschreibung>Berechnet die Summe aller Elemente eines Arrays</beschreibung>
  </metadata>
  
  <inhalt>
    <!-- Initialisierung -->
    <prozess>summe = 0</prozess>
    <prozess>i = 0</prozess>
    
    <!-- While-Schleife durch Array -->
    <wiederhole>
      <bedingung>i &lt; l√§nge(array)</bedingung>
      <inhalt>
        <prozess>summe = summe + array[i]</prozess>
        <prozess>i = i + 1</prozess>
      </inhalt>
    </wiederhole>
    
    <!-- Ergebnis ausgeben -->
    <ausgabe>return summe</ausgabe>
  </inhalt>
  
