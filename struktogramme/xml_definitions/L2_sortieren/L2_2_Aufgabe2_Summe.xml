<struktogramm>
  <metadata>
    <titel>Aufgabe 2: Summenberechnung mit While-Schleife</titel>
    <level>L2</level>
    <kategorie>Schleifen</kategorie>
    <autor>Klassenarbeit</autor>
    <beschreibung>Berechnet die Summe von Eingabezahlen bis -1 eingegeben wird</beschreibung>
  </metadata>
  <inhalt>
    <prozess>summe = 0</prozess>
    <eingabe>zahl als Ganzzahl</eingabe>
    <wiederhole>
      <bedingung>zahl != -1</bedingung>
      <inhalt>
        <prozess>summe = summe + zahl</prozess>
        <ausgabe>Summe + summe</ausgabe>
        <eingabe>zahl als Ganzzahl</eingabe>
      </inhalt>
    </wiederhole>
    <ausgabe>Programm beendet</ausgabe>
  </inhalt>
</struktogramm>
