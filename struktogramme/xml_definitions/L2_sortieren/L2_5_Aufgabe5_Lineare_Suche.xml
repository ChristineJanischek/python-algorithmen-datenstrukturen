  <inhalt>
    <prozess typ="zuweisung">i = 0</prozess>
    <prozess typ="zuweisung">flag = falsch</prozess>
    <wiederhole>
      <bedingung>i &lt; Anzahl der Elemente des Arrays buchstaben AND NOT flag</bedingung>
      <inhalt>
        <wenn>
          <bedingung>buchstaben[i] == eingabe</bedingung>
          <dann>
            <prozess typ="zuweisung">flag = wahr</prozess>
          </dann>
        </wenn>
        <prozess typ="zuweisung">i = i + 1</prozess>
      </inhalt>
    </wiederhole>
    <wenn>
      <bedingung>flag</bedingung>
      <dann>
        <ausgabe typ="ausgabe">Treffer</ausgabe>
      </dann>
      <sonst>
        <ausgabe typ="ausgabe">Kein Treffer</ausgabe>
      </sonst>
    </wenn>
  </inhalt>
