<?xml version='1.0' encoding='utf-8'?>
<struktogramm>
  <metadata>
    <titel>Aufgabe 5: Lineare Suche mit Flag</titel>
    <level>L2</level>
    <kategorie>Suchen</kategorie>
    <autor>Klassenarbeit</autor>
    <beschreibung>Suche nach Element in Array mit Hilfs-Flag</beschreibung>
  </metadata>
  <inhalt>
    <prozess typ="zuweisung">i = 0</prozess>
    <prozess typ="zuweisung">gefunden = falsch</prozess>
    <wiederhole>
      <bedingung>i &lt; Anzahl der Elemente des Arrays buchstaben AND NOT gefunden</bedingung>
      <inhalt>
        <wenn>
          <bedingung>buchstaben[i] == such</bedingung>
          <dann>
            <prozess typ="zuweisung">gefunden = wahr</prozess>
          </dann>
        </wenn>
        <prozess typ="zuweisung">i = i + 1</prozess>
      </inhalt>
    </wiederhole>
    <wenn>
      <bedingung>gefunden</bedingung>
      <dann>
        <ausgabe typ="ausgabe">Element gefunden an Position i</ausgabe>
      </dann>
      <sonst>
        <ausgabe typ="ausgabe">Element nicht gefunden</ausgabe>
      </sonst>
    </wenn>
  </inhalt>
</struktogramm>